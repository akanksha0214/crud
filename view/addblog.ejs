<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
    <title>Add Blog</title>

    <style>
        .blog-form-card {
            max-width: 600px;
            margin: 40px auto;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 0 24px rgba(0,0,0,0.08);
        }

        .blog-form-card:hover {
            box-shadow: 0 0 30px rgba(0,0,0,0.12);
            transition: 0.25s ease;
        }

        textarea {
            min-height: 180px;
            resize: vertical;
        }
    </style>
</head>

<body>

    <%- include("./partials/nav") %>

    <div class="container">
        <div class="blog-form-card bg-white">
            <h2 class="mb-4 text-center fw-semibold">Create New Blog</h2>

            <form action="/blog" method="POST" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label fw-semibold">Title</label>
                    <input type="text" class="form-control" name="title" placeholder="Enter blog title">
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Body</label>
                    <textarea class="form-control" name="body" placeholder="Write your blog here..."></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Cover Image</label>
                    <input type="file" class="form-control" name="coverimg">
                </div>

                <button class="btn btn-primary w-100">Submit</button>

            </form>
        </div>
    </div>

    <%- include("./partials/script") %>
</body>

</html>
